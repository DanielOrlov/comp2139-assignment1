@model Product

@{
    ViewBag.Title = "Delete Product";
    Layout = "_Layout";
}

<h2>@ViewBag.Title</h2>

<h3>Are you sure you want to delete this product?</h3>

<div>
    <h4>Product</h4>
    <hr/>

    <dl class="row">
        <dt class="col-sm-3">Product ID</dt>
        <dd class="col-sm-9">@Model.ProductId</dd>

        <dt class="col-sm-3">Product Name: </dt>
        <dd class="col-sm-9">@Model.Name</dd>

        <dt class="col-sm-3">Product Description: </dt>
        <dd class="col-sm-9">@Model.Description</dd>

        <dt class="col-sm-3">Product category: </dt>
        <dd class="col-sm-9">@Model.Category</dd>

    </dl>

    <form asp-action="Delete" method="post">
        @Html.HiddenFor(model => model.ProductId)
        <input type="submit" value="Delete" class="btn btn=danger">
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>

</div>