@model List<Category>

@{
    ViewBag.Title = "Categories";
    Layout = "_Layout";
}

<h2>Categories</h2>

@if (Model.Any())
{
    <table class="table">
        <thead>
        <th>ID</th>
        <th>Name</th>
        <th>Description</th>
        </thead>
        
        <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.CategoryId</td>
                <td>@category.Name</td>
                <td>@category.Description</td>
            </tr>
        }
        </tbody>
    </table>
}
else
{
    <p>No categories created yet</p>
}