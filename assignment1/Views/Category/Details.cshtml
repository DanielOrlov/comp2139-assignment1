@model Category

@{
    ViewBag.Title = "Category Details";
    Layout = "_Layout";
}

<h2>@ViewBag.Title</h2>

<div class="card">
    <div class="card-body">
        <h3 class="card-title">@Model.Name</h3>
        <p class="card-text">@Model.Description</p>

        <!-- Display other properties of the project as needed/desired -->
        <dl class="row">
            <dt class="col-sm-3">Category ID</dt>
            <dd class="col-sm-9">@Model.CategoryId</dd>

            @* <dt class="col-sm-3">Start Date</dt> *@
            @* <dd class="col-sm-9">@Model.StartDate.ToShortDateString</dd> *@
            @* *@
            @* <dt class="col-sm-3">End Date</dt> *@
            @* <dd class="col-sm-9">@Model.EndDate.ToShortDateString</dd> *@
            @* *@
            @* <dt class="col-sm-3">Status</dt> *@
            @* <dd class="col-sm-9">@Model.Status</dd> *@
            
            
        </dl>
        
        

        <a asp-action="Edit" asp-route-id="@Model.CategoryId" class="btn btn-primary">Edit</a>
        <a asp-action="Index" asp-route-id="@Model.CategoryId" class="btn btn-secondary">Back to Category List</a>

    </div>

</div>